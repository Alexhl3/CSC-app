<div class="flex justify-center">
  <div class="bg-slate-200 px-10 py-5 rounded-lg ">
    <h1 class="text-stone-800 text-center font-sans text-2xl font-normal py-4 antialiased"><%= t('.title')%></h1>
    <%= form_with(url: sessions_path) do |form| %>
      <div class="py-3">
        <%= form.text_field :login,class: "block border border-grey-light w-full p-3 rounded mb-4 bg-slate-300 focus:bg-white font-sans font-medium",placeholder: t('.placeholder_username'), required: true %>
      </div>

      <div>
        <%= form.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4 bg-slate-300 focus:bg-white font-sans font-medium",placeholder: t('.placeholder_password'), required: true %>
      </div>

      <div class="flex justify-center py-2">
        <%= form.submit t('.new_session'), class: "bg-slate-800 p-2 rounded-md text-white hover:bg-slate-700" %>
      </div>
    <% end %>
  </div>
</div>

<div class="py-20"></div>
