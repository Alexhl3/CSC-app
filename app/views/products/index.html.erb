<%= turbo_frame_tag 'index' do %>
  <h1 class="pb-8 mx-auto font-sans text-3xl font-bold"><%= t('.title')%></h1>
  <div class="flex ">
    <div class="bg-slate-200 rounded-lg p-1">
      <div class="flex flex-col bg-slate-200 p-2 py-3 rounded-lg">
        <%= form_with url: products_path, method: :get do |form| %>
          <div>
            <h1 class="mb-2 border-b border-slate-400"><%= t('.name')%></h1>
            <%= form.text_field :query_text, class: "block border border-grey-light w-full p-3 rounded bg-slate-300 focus:bg-white font-sans font-medium", placeholder: t('.text'), onChange: 'this.form.requestSubmit()', value: params[:query_text] %>
          </div>

          <h1 class="mb-2 border-b border-slate-400"><%= t('.price')%></h1>
          <div class="flex">

            <div class="w-32 grow mr-1">
              <%= form.number_field :min_price, class: "block border border-grey-light w-full p-3 rounded mb-4 bg-slate-300 focus:bg-white font-sans font-medium", placeholder: t('.min_price'), onChange: 'this.form.requestSubmit()', value: params[:min_price] %>
            </div>

            <div class="w-32 grow ml-1">
              <%= form.number_field :max_price, class: "block border border-grey-light w-full p-3 rounded mb-4 bg-slate-300 focus:bg-white font-sans font-medium", placeholder: t('.max_price'), onChange: 'this.form.requestSubmit()', value: params[:max_price] %>
            </div>
          </div>

          <div>
          <h1 class="mb-2 border-b border-slate-400"><%= t('.filter')%></h1>

            <%= form.select :order_by, options_for_select(Product::ORDER_BY.keys.map { |order| [t(".#{order}"), order] }, params[:order_by]), {}, { onChange: 'this.form.requestSubmit()', class: "block border border-grey-light w-full p-3 rounded mb-4 bg-slate-300 focus:bg-white font-sans font-medium" } %>
          </div>

          <h1 class="mb-2 border-b border-slate-400"><%= t('.category')%></h1>
          <div class="grid grid-cols-2 gap-2 text-center w-max">
            <%= render partial: 'category', collection: @categories %>
          </div>
            <div class="text-center block border border-grey-light w-full rounded bg-slate-300 font-sans hover:bg-red-500 mt-2">
              <%= link_to t('.all'), products_path %>
            </div>
          <% end %>
      </div>
    </div>

    <div>
      <%= turbo_frame_tag :products do %>
        <%= turbo_frame_tag "products-#{@pagy.page}", class: 'products' do %>
          <div class="grid grid-cols-3 gap-4 px-4 pb-2">
              <%= render partial: 'product', collection: @products %>
          </div>
          <%= turbo_frame_tag "products-#{@pagy.next}", class: 'products', src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next %>
        <% end %>
      <% end %>
    </div>
  </div>

<% end %>
