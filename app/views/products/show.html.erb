<div class="flex justify-center font-montserrat">
  <div class="flex flex-col pl-5 pb-20">
    <div class="flex drop-shadow">
      <div>
        <%= render partial: 'carousel' if @product.images.attached? or @product.photo.attached?%>
      </div>

      <div class="flex flex-col bg-white  rounded-r-lg p-3 w-max border-l border-slgb">
        <h2 class='title font-bold text-xl text-bgray'><%= @product.title %></h2>

        <div class="flex justify-start">
          <span class='price text-red-700 text-lg'>$<%= @product.price %></span>
        </div>

        <div class="description">
          <%= @product.description %>
        </div>

        <div class="mt-auto">
          <%= link_to t('.show_more', username: @product.user.username), user_path(@product.user.username) if Current.user&.admin? %>
        </div>
      </div>
    </div>

    <div class="flex font-semibold">
        <% if Current.user == @product.user or Current.user&.admin? %>
          <div class="bg-lb hover:bg-lbd  rounded-b-lg text-center p-1 text-white">
            <%= link_to t('.edit'), edit_product_path(@product) %>
          </div>

          <div class="bg-red-600 hover:bg-red-700 rounded-b-lg text-center p-1 text-white">
            <%= link_to t('.destroy'), product_path(@product), data: { turbo_method: :delete } %>
          </div>
        <% end %>
      </div>
  </div>
</div>