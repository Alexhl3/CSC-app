<div class="flex flex-col bg-slate-900 px-3 pt-3 font-sans">
  <div class="flex flex-row justify-between py-1.5">
    <div class="text-white text-bold text-3xl">
      <%= link_to homes_path do %>
        <h1>Comerciales Sistemas Comerciales</h1>
      <% end %>
    </div>

    <div class="text-right text-white">
      <div>
        <h3><%= t('.phone_number')%></h3>
      </div>
      <div>
        <h3><%= t('.adress')%></h3>
      </div>
    </div>
  </div>

  <div class="flex flex-row text-xl">
    <div class="text-slate-600 hover:text-white py-2 pr-2">
      <%= link_to t('.products'), products_path %>
    </div>
    <% if Current.user&.admin? %>
      <div class="text-slate-600 hover:text-white p-2">
        <%= link_to t('.categories'), categories_path %>
      </div>

      <div class="text-slate-600 hover:text-white p-2">
        <%= link_to t('.sign_up'), new_user_path %>
      </div>

      <div class="text-slate-600 hover:text-white p-2">
        <%= link_to t('.add'), new_product_path %>
      </div>
    <% end %>
    <div class="ml-auto text-slate-600 hover:text-white py-2">
      <%= button_to t('.logout'), session_path('123'), method: :delete if Current.user%>
    </div>
  </div>
</div>