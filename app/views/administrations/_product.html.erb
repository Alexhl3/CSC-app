<div id="<%= dom_id product %>" class="bg-white grid grid-cols-3 gap-x-1 p-1 border-t-4 font-sans font-medium">
  <div>
      <%= product.title %>
  </div>

  <div class="flex justify-end">
    <div class="bg-slate-800 px-1 rounded-md text-white hover:bg-slate-700">
      <%= link_to t('.edit'), edit_product_path(product) %>
    </div>
  </div>

  <div class="flex justify-end">
    <div class="bg-red-700 px-1 rounded-md text-white hover:bg-red-600">
      <%= link_to t('.destroy'), product_path(product), data: {
        turbo_method: :delete
      } %>
    </div>
  </div>
</div>