<div id="<%= dom_id product %>" class="grid grid-cols-1 p-1 font-sans font-medium bg-white border-t-4 sm:grid-cols-4 product gap-x-1">
  <div class="hidden bg-white rounded-md sm:block min-h-10">
    <%= image_tag product.photo, class: "object-scale-down w-full h-10 rounded-t-lg" if product.photo.attached? %>
  </div>
  <div class="flex items-center hover:text-lbd">
    <div class="flex justify-center w-10 sm:hidden">
      <%= image_tag product.photo, class: "object-scale-down max-w-fit h-10 rounded-t-lg" if product.photo.attached? %>
    </div>
    <%= link_to product_path(product.id) do %>
      <h1 class="w-full"><%= product.title %></h1>
    <% end %>
    <div class="relative ml-auto sm:hidden" data-controller="dropMenu">
      <button data-action="click->dropMenu#open">
        <%= image_tag('icons/ellipsis-vertical.svg', class: "w-7 h-7")%>
      </button>
      <div class="absolute right-0 z-40 hidden text-white shadow-lg buttom-0" data-dropMenu-target="items">
        <%= link_to edit_product_path(product) do %>
          <h1 class="px-2 py-1 rounded-t bg-lbd"><%= t('.edit')%></h1>
        <% end %>
        <%= link_to product_path(product), data: { turbo_method: :delete } do %>
          <h1 class="px-2 py-1 bg-red-600 rounded-b"><%= t('.destroy')%></h1>
        <% end %>
      </div>
    </div>
  </div>
  <div class="items-center justify-end hidden sm:flex">
    <div class="px-1 font-semibold text-white rounded-md bg-lb hover:bg-lbd">
      <%= link_to t('.edit'), edit_product_path(product) %>
    </div>
  </div>
  <div class="items-center justify-end hidden sm:flex">
    <div class="px-1 text-white bg-red-600 rounded-md hover:bg-red-700">
      <%= link_to t('.destroy'), product_path(product), data: {
        turbo_method: :delete
      } %>
    </div>
  </div>
</div>
