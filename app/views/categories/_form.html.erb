<div class="flex justify-center font-montserrat">
  <%= form_with(model: category) do |form| %>
    <% @category.errors.full_messages.each do |error|%>
      <div class="relative p-1 font-sans bg-red-500 border-2 border-white rounded-lg">
        <div class="absolute top-0 right-0 w-4 h-4 -mt-1 -mr-1 bg-red-700 rounded-full animate-ping"></div>
        <div class="absolute top-0 right-0 w-4 h-4 -mt-1 -mr-1 bg-red-700 rounded-full"></div>
        <%= error %>
      </div>
    <% end %>
    <div class="py-1"></div>
    <div class="px-10 py-5 rounded-lg bg-slate-200">
      <div>
        <%= form.label :name, t('.name') , class: "font-medium" %>
      </div>
      <div>
        <%= form.text_field :name, required: true, class: "block border border-grey-light w-full p-3 rounded mb-4 bg-slg focus:bg-white font-medium",placeholder: t('.placeholder_name') %>
      </div>
      <div class="flex justify-center py-2 space-x-2">
        <div class="p-2 font-semibold text-white rounded-md bg-zinc-600 hover:bg-zinc-500">
          <%= link_to t('.back'), categories_path %>
        </div>
        <%= form.submit t('commond.submit'), class: "font-semibold bg-lb hover:bg-lbd p-2 rounded-md text-white" %>
      </div>
    <% end %>
  </div>
</div>
