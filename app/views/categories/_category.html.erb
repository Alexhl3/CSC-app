<div id="<%= dom_id category %>" class="bg-white grid grid-cols-3 gap-x-1 p-1 border-t-4 font-sans font-medium">
  <div>
      <%= category.name %>
  </div>

  <div class="flex justify-end">
    <div class="font-semibold bg-lb hover:bg-lbd px-1 rounded-md text-white">
      <%= link_to t('.edit'), edit_category_path(category) %>
    </div>
  </div>

  <div class="flex justify-end">
    <div class="bg-red-600 px-1 rounded-md text-white hover:bg-red-700">
      <%= link_to t('.destroy'), category_path(category), data: {
        turbo_method: :delete
      } %>
    </div>
  </div>
</div>
